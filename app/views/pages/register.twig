{% extends "layout.twig" %}

{% block content %}

    <div class=container>
        <div class="col-md-5">

            <h1>Inscription</h1>
            <p>Remplis ce formulaire pour faire partie de la bande!</p>

            <form action="{{ path_for('register') }}" method="post">

                <div class="form-group">
                    <label for="name">Ton prénom</label>
                    <input type="text" class="form-control" name="user_name" id="user_name">
                </div>
                <div class="form-group">
                    <label for="email">Ton email</label>
                    <input type="email" class="form-control" name="mail" id="mail">
                </div>
                <div class="form-group>
                    <label for="content">Décrit toi en quelques mots</label>
                    <textarea rows="10" cols="20" type="text" class="form-control" name="user_description" id="user_description"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Envoyer">
                </div>

            </form>

        </div>    
    </div>
{% endblock %}